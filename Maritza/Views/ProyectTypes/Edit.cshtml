@model tblProyectTypes
@{
    ViewBag.Title = "Editar tipo de proyecto";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "ProyectTypes", FormMethod.Post, new { @id = "frm", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary();
  
 

    <div class="container p-5 mt-5 mb-5">
        <div class="card mt-5">
            <div class="card-header">
                <h3>@ViewBag.Title</h3>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-4">
                        @Html.LabelFor(model => model.Name, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row mt-3">
                    <div class="col-2">
                        <a class="btn btn-secondary w-100" href="@Url.Action("Index","ProyectTypes", new {@id=Model.ProyectTypeID})">Regresar</a>
                    </div>
                    <div class="col-2 offset-6">
                        <input id="btnDelete" class="btn btn-danger w-100" type="button" value="Eliminar" />
                    </div>
                    <div class="col-2">
                        <input class="btn btn-success w-100" type="submit" value="Guardar edición" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.HiddenFor(model => model.ProyectTypeID);
    @Html.HiddenFor(model => model.Active);
    @Html.HiddenFor(model => model.CreatedBy);
    @Html.HiddenFor(model => model.CreatedDate);
    @Html.HiddenFor(model => model.UpdatedBy);
    @Html.HiddenFor(model => model.UpdatedDate);
    @Html.HiddenFor(model => model.DeletedBy);
    @Html.HiddenFor(model => model.DeletedDate);
}

@section scripts{
    <script type="text/javascript">

        $('#btnDelete').click(function () {
            $('#frmDelete').submit();
        });

    </script>
}
