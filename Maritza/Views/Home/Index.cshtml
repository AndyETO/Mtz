@{
    ViewBag.Title = "Mary-Making";
    string[] colors = { "#E0F19C", "#D5FFF1", "#FFFFB8", "#FEC7F7", "#7F7162" };
    int count = 0;
    var lstSearchProyects = ViewBag.lstSearchProyects as List<tblProyects>;
    var lstMainProyects = ViewBag.lstMainProyects as List<tblProyects>;

    if (lstMainProyects != null)
    {
        if (lstMainProyects.Count <= 6)
        {
            bool changing = true;
            while (lstMainProyects.Count <= 6)
            {

                var tempProyect = new tblProyects();
                var tempImage = new tblProyectImages();
                tempImage.Url = changing ? "~/Content/Img/Backgrounds/Bakground-green-frogs.png" : "~/Content/Img/Backgrounds/Bakground-pink-frogs.png";
                tempProyect.MainImage = tempImage;
                lstMainProyects.Add(tempProyect);
                changing = !changing;
            }
        }
    }
}

