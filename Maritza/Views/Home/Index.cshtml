@model List<tblProyects>
@{
    ViewBag.Title = "Mary-Making";
    string[] colors = { "#E0F19C", "#D5FFF1", "#FFFFB8", "#FEC7F7", "#7F7162" };
    int count = 0;
}

<div class="container-custom" style="background-image:url('@Url.Content("~/Content/Img/Backgrounds/Bakground-green-frogs.png")');">
    <div class="container-scrolling ">
        <div class="box-size-1">
            <div id="carouselExampleDark" class="carousel carousel-dark slide w-100" style="background-color:white">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    @{int next = 0;}
                    @for (int i = 1; i < Model.Count() + 1; i++)
                    {
                        { next += 1; }
                        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="@i" aria-label="Slide @next"></button>
                    }
                </div>
                <div class="carousel-inner h-75 " style="height:90vh;">
                    <div class="carousel-item active " data-bs-interval="1">
                        <a href="#" class="d-flex justify-content-center h-100">
                            <img src="@Url.Content("~/Content/DefaultImages/img1.png")" class="rounded mx-auto d-block img-fluid" style="max-height: 450px" alt="...">

                        </a>
                        <div class="carousel-caption d-md-block ">
                            <div class="row">
                                <div class="offset-4 col-4">
                                    <h5 style="background-color:rgba(0, 0, 0,.70);color:white;" >First slide label</h5>

                                </div>
                                <div class="offset-4 col-4">
                                    <p>Some representative placeholder content for the first slide.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @foreach (var element in Model)
                    {
                        <div class="carousel-item " data-bs-interval="1">
                            <a href="#item_@element.ProyectID" class="d-flex justify-content-center h-100">

                                @if (element.Image != null)
                                {
                                    <img src="@Url.Content($"~/{element.Image}")" class="rounded d-block p-2 w-auto h-100 d-flex justify-content-center" style="max-height: 500px; min-height: 500px; width: 100%; height: auto; " alt="...">
                                }
                                else
                                {
                                    <img src="@Url.Content($"~/Content/ProyectsImages/img2.png")" class="rounded d-block p-2 w-auto d-flex justify-content-center" style="max-height: 500px" alt="...">
                                }
                            </a>
                            @*<div class="carousel-caption d-none d-md-block d-flex justify-content-center">
                                <h5>@element.Title</h5>
                                <p>@element.Description.</p>
                            </div>*@
                            <div class="carousel-caption d-md-block ">
                                <div class="row">
                                    <div class="offset-5 col-2 my-1 ">
                                        <h4 class="rounded-5 py-1" style="background-color:rgb(254 199 247 / 0.70); color:white;">@element.Title</h4>

                                    </div>
                                    <div class="offset-4 col-4  my-1">
                                        <p class="rounded-5" style="background-color: rgb(254 199 247 / 0.70); color: white; ">@element.Description.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                @if (Model.Count > 1)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"><!--Poner imagenes felchas--></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"><!--Poner imagenes felchas--></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                }


            </div>

        </div>


        @foreach (var element in Model)
        {
            if (false)
            {

                <div class="box-size-2">
                    <div id="item_@element.ProyectID" class="card mb-3 w-100 h-75 p-5 m-5" style="">
                        @if (element.Image != null)
                        {
                            <img src="@Url.Content($"~/{element.Image}")" class="rounded mx-auto d-block img-fluid p-2" alt="..." style="max-height:350px">
                        }
                        else
                        {
                            <img src="@Url.Content("~/Content/ProyectsImages/img1.png")" class="rounded mx-auto d-block img-fluid p-2" alt="..." style="max-height:350px">
                        }

                        <div class="card-body">
                            <h5 class="card-title">@element.Title</h5>
                            <p class="card-text">@element.Description.</p>
                            <p class="card-text"><small class="text-body-secondary">Subido el @element.UpdatedDate.ToLongDateString()</small></p>
                        </div>
                    </div>
                </div>
            }
            <div class="box-size-2">
                <div class="card m-auto w-75 h-50 rounded-4" style="background-color:@colors[count];">
                    <div id="item_@element.ProyectID" class="row g-0 h-100">
                        <div class="col-md-4 p-4 d-flex justify-content-center m-auto">
                            @if (element.Image != null)
                            {
                                <img src="@Url.Content($"~/{element.Image}")" class="img-fluid  rounded-4" alt="..." style="max-height:350px">
                            }
                            else
                            {
                                <img src="@Url.Content("~/Content/ProyectsImages/img1.png")" class="img-fluid rounded-4" alt="..." style="max-height:350px">
                            }
                        </div>
                        <div class="col-md-8">
                            <div class="card-body mt-5">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text pe-5">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            count++;
            if (count == 4)
            {
                count = 0;
            }
        }
    </div>
</div>