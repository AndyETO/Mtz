@model tblProyects
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Delete", "Proyect", FormMethod.Post, new { @id = "frmDelete" }))
{
    @Html.Hidden("id", Model.ProyectID);
}

@using (Html.BeginForm("Edit", "Proyect", FormMethod.Post, new { @id = "frm" }))
{
    <div class="row">
        <div class="col-4">
            @Html.LabelFor(model => model.Title, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.LabelFor(model => model.Description, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.LabelFor(model => model.Comment, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.Comment, new { @class = "form-control" })
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-2">
            <a class="btn btn-secondary" href="@Url.Action("Details","Proyect", new {@id=Model.ProyectID})">Regresar</a>
        </div>
        <div class="col-2 offset-6">
            <input id="btnDelete" class="btn btn-danger" type="button" value="Eliminar" />
        </div>
        <div class="col-2">
            <input class="btn btn-success" type="submit" value="Guardar edición" />
        </div>
    </div>
}

@section scripts{
    <script type="text/javascript">
            
        $('#btnDelete').click(function () {
            $('#frmDelete').submit();
        });

    </script>
}
