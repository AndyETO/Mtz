@model tblProyects
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "frm" }))
{
    <div class="row">
        <div class="col-4">
            @Html.LabelFor(model => model.Title, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.LabelFor(model => model.Description, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.LabelFor(model => model.Comment, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.Comment, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-2">
            <a class="btn btn-secondary" href="@Url.Action("Index")">Regresar</a>
        </div>
        <div class="col-2 offset-8">
            <input class="btn btn-success" type="submit" value="Guardar" />
        </div>
    </div>
}



