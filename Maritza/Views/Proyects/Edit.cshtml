                            if (Model.MainPagePublish != null)
                            {
                                MainPagePublish_StarDate = Model.MainPagePublish.StarDate != null ? @Model.MainPagePublish.StarDate.ToString("yyyy-MM-dd") : "";
                            }

                        }
