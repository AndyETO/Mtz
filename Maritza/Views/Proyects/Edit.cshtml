                                    string selectedMidProyect = Model.ProyectPublish.PriorityLevel == 2 ? "selected" : "";
                                    string selectedLowProyect = Model.ProyectPublish.PriorityLevel == 3 ? "selected" : "";
                                }
                                <option value="1" @selectedHeightProyect>Alta</option>
                                <option value="2" @selectedMidProyect>Mediana</option>
                                <option value="3" @selectedLowProyect>Baja</option>
                            </select>
                        </div>
                    }
                </div>

