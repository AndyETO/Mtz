                    </div>
                    <div class="col-4 p-1 show-date-proyects" style="@proyectsDateDisplay">
                        <label class="form-label fw-bold ">Fecha inicio</label>
                        @{
                            string ProyectPublish_StarDate = string.Empty;

                            if (Model.ProyectPublish != null)
