        function showImageInCropper(Files, inputSelected) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $(`.cropper-image-${inputSelected}`).attr('src', e.target.result);
                $(`#ContainerCropper-${inputSelected}`).show();
