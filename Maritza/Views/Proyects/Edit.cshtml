                                                    <!--Layout cropper-->
                                                    <img src="" class="cropper-image-@index" id="croppedImage-@index" name="croppedImage">
                                                </div>

                                            </div>
                                            <div id="display-btn-cropper-@index" class="offset-4 col-4 p-1">
                                                <!--Cropper btn-->
                                            </div>
                                        </div>
                                        <div class="col-12 p-1 img-display-content-@index">
                                            <!--Cropper js img-->
                                            <div class="row">
                                                <div class="col-12 card">
                                                    <!--Images-->
                                                    <div class="row">
                                                        <div class="col-12 text-center m-3">
                                                            <img id="Img-display-@index" src="@Url.Content(image.Url)" class="object-fit" style="max-width: 50%;">
                                                        </div>
