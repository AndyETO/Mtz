                    </div>
                    <div class="col-4 p-1 show-date-proyects" style="@proyectsDateDisplay">
                        <label class="form-label fw-bold ">Fecha final</label>
                        @{
                            string ProyectPublish_EndDate = string.Empty;

                            if (Model.ProyectPublish != null)
                            {
                                ProyectPublish_EndDate = Model.ProyectPublish.StarDate != null ? @Model.ProyectPublish.EndDate.ToString("yyyy-MM-dd") : "";
                            }
                        }

                        <input id="EndDateProyects" name="EndDateProyects" type="date" class="form-control" value="@ProyectPublish_EndDate" />
                    </div>
                </div>
