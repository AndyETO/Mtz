                                @{
                                    string selectedHeightMain = Model.MainPagePublish.PriorityLevel == 1 ? "selected" : "";
                                    string selectedMidMain = Model.MainPagePublish.PriorityLevel == 2 ? "selected" : "";
                                    string selectedLowMain = Model.MainPagePublish.PriorityLevel == 3 ? "selected" : "";
                                }
                                <option value="1" @selectedHeightMain>Alta</option>
                                <option value="2" @selectedMidMain>Mediana</option>
                                <option value="3" @selectedLowMain>Baja</option>
                            </select>
